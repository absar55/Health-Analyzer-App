<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3C3C3C"/> <!-- Shadow color -->
            <corners android:radius="10dp"/> <!-- Shadow corner radius -->
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/> <!-- Shadow padding -->
        </shape>
    </item>

    <!-- Border and background layer -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFEB3B"
                android:endColor="#FFC107"
                android:angle="45"/> <!-- Gradient background -->
            <stroke
                android:width="2dp"
                android:color="#000000"/> <!-- Border color and width -->
            <corners android:radius="10dp"/> <!-- Corner radius -->
            <padding
                android:left="16dp"
                android:top="20dp"
                android:right="16dp"
                android:bottom="20dp"/> <!-- Padding inside the EditText -->
        </shape>
    </item>
</layer-list>
